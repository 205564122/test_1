char* my_strcpy(char* dest,const char* src)
{
	char* ret=dest;
	assert(dest!=NULL);//断言
	assert(src!=NULL);//断言
	while((*dest++=*src++)!='\0');//将src指向的字符串拷贝到dest指向的空间内
	return ret;
}
int main()
{
	char arr1[]="hello,word";
	char arr2[]="hello！";
	my_strcpy(arr1,arr2);
	printf("%s\n",arr1);
	return 0;
}
