#include<stdio.h>
int check_sys()
{
	int a=1;
	char* p=(char*) &a;
	//返回1，小端
	//返回0，大端
	return *p;
}
int main()
{
	//返回1，小端
	//返回0，大端
	int ret=check_sys();   //大端存储：数据低位保存在内存的高地址，数据高位保存在内存低地址
	if(ret==1)             //小端存储：数据低位保存在内存的低地址，数据高位保存在内存高地址
		printf("小端\n");   
	else
		printf("大端\n");
	return 0;
}
