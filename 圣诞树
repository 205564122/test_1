#include<stdio.h>
int main()
{
	int a,e,f,i;
printf("请输入树叶的行数：");
scanf("%d",&a);
for(i=1;i<=a;i++)
{
	for(e=1;e<=a-i;e++)
		{
			printf(" ");
	    }
for(f=1;f<=2*i-1;f++)
   {
	printf("*");
   }
printf("\n");
}
for(i=1;i<=a-1;i++)
{
	for(e=1;e<=a-1;e++)
	{
		printf(" ");
	}
	         printf("*");
		     printf("\n"); 
}
return 0;
}
